generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String

  @@map("users")
}

model City {
  id   String @id @default(uuid())
  name String @unique

  pets Pet[]

  @@map("cities")
}

model Pet {
  id              String   @id @default(uuid())
  name            String
  characteristics String
  details         String
  locality        String
  createdAt       DateTime @default(now())

  org     Org     @relation(fields: [org_Id], references: [id])
  org_Id  String
  city    City?   @relation(fields: [city_Id], references: [id])
  city_Id String?

  @@map("pets")
}

model Org {
  id        String   @id @default(uuid())
  name      String
  address   String
  phone     String
  createdAt DateTime @default(now())
  isAdmin   Boolean  @default(false)

  Pet Pet[]

  @@map("orgs")
}
